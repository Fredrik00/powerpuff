<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.primer.trening.MainActivity">

    <RelativeLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/checkBox"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/contest_button"
            style="?android:textAppearanceSmall"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:text="SIGN IN"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:textSize="24dp"
            android:src="@drawable/contest_button"
            android:scaleType="fitCenter"
            android:background="#00ffffff"
            android:layout_below="@+id/checkBox"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contest_button"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout">

            <ImageView
                android:src="@drawable/pie"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Steps:"
                android:id="@+id/steps1"
                android:layout_below="@+id/imageView1"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="give me string"
                android:id="@+id/daily_goal"
                android:layout_below="@+id/steps1"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:src="@drawable/pie"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView2"
                android:layout_alignTop="@+id/imageView1"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Steps:"
                android:id="@+id/steps2"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="string reference here"
                android:id="@+id/activity_contest"
                android:layout_below="@+id/steps2"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/button2"
            style="?android:textAppearanceSmall"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:text="SIGN IN"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:textSize="24dp"
            android:src="@drawable/contest_button"
            android:scaleType="fitCenter"
            android:background="#00ffffff"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SlidingDrawer
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:content="@+id/linearLayout"
            android:handle="@+id/button4"
            android:id="@+id/slidingDrawer"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#22b14c">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/textView" />

                <ImageView
                    android:src="@drawable/mapses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textView2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button5" />

            </LinearLayout>

            <Button
                android:background="#22b14c"
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sveip meg" />
        </SlidingDrawer>
    </FrameLayout>

</FrameLayout>